{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": "."
    },
    "compileOnSave": true,
    "buildOnSave": false,
    "exclude": [
        "node_modules",
        "public/js/*"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}