extends ../shared/layout.pug

block body
    div.page-wrapper
        div.container-fluid
            div.row.page-titles
                div.col-md-5.col-8.align-self-center
                    h3.text-themecolor.m-b-0.m-t-0 Supplies
                    ol.breadcrumb
                        li.breadcrumb-item
                            a(href="javascript:void(0)") Supplies
                        li.breadcrumb-item.active List
            div.row
                div.col-lg-12
                    div.card
                        div.card-block
                            div.table-responsive
                                table.table
                                    thead
                                        tr
                                            th.mdl-data-table__cell--non-numeric ID
                                            th.mdl-data-table__cell--non-numeric Name
                                            th.mdl-data-table__cell--non-numeric Current Amount
                                            th.mdl-data-table__cell--non-numeric Needed Amount
                                            th.mdl-data-table__cell--non-numeric Cost (per unit)
                                    tbody
                                        for s in supplies
                                            tr
                                                td.mdl-data-table__cell--non-numeric #{s.SupplyID}
                                                td.mdl-data-table__cell--non-numeric #{s.name}
                                                td #{s.CurrentAmt}
                                                td #{s.NeededAmt}
                                                td #{s.Cost}

