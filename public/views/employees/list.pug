extends ../shared/layout.pug

block body
    div.page-wrapper
        div.container-fluid
            div.row.page-titles
                div.col-md-5.col-8.align-self-center
                    h3.text-themecolor.m-b-0.m-t-0 Employees
                    ol.breadcrumb
                        li.breadcrumb-item
                            a(href="javascript:void(0)") Employees
                        li.breadcrumb-item.active List
            div.row
                div.col-lg-12
                    div.card
                        div.card-block
                            div.table-responsive
                                table.table
                                    thead
                                        tr
                                            th.mdl-data-table__cell--non-numeric ID
                                            th.mdl-data-table__cell--non-numeric Name
                                            th.mdl-data-table__cell--non-numeric Email
                                            th.mdl-data-table__cell--non-numeric Start
                                            th.mdl-data-table__cell--non-numeric Position
                                    tbody
                                        for e in employees
                                            tr
                                                td.mdl-data-table__cell--non-numeric #{e.PersonID}
                                                td.mdl-data-table__cell--non-numeric #{e.FirstName} #{e.LastName}
                                                td.mdl-data-table__cell--non-numeric #{e.Email}
                                                td.mdl-data-table__cell--non-numeric #{e.StartDate}
                                                td.mdl-data-table__cell--non-numeric #{e.Position}

